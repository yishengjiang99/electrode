{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2018"],
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES2018",
    "sourceMap": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "jsx": "react"
  },
  "include": ["src"]
}
